{
  "name": "Docs Hotkey",
  "version": "0.16",
  "description": "Create hotkeys for Google Docs",
  "permissions": ["storage"],
  "background": {
    "service_worker": "static/js/background.js"
  },
  "content_scripts": [
    {
      "matches": ["*://docs.google.com/document/d/*", "*://classroom.google.com/*", "*://docs.google.com/presentation/d/*"],
      "all_frames": true,
      "js": ["static/js/content.js"]
    }
  ],
  "commands": {
    "slot1": {
      "suggested_key": {
        "default": "Ctrl+Shift+H"
      },
      "description": "Slot 1"
    },
    "slot2": {
      "description": "Slot 2"
    },
    "slot3": {
      "description": "Slot 3"
    },
    "slot4": {
      "description": "Slot 4"
    },
    "slot5": {
      "description": "Slot 5"
    },
    "slot6": {
      "description": "Slot 6"
    },
    "slot7": {
      "description": "Slot 7"
    },
    "slot8": {
      "description": "Slot 8"
    },
    "slot9": {
      "description": "Slot 9"
    }
  },
  "action": {
    "default_title": "Open popup",
    "default_popup": "index.html"
  },
  "manifest_version": 3,
  "icons": {
    "128": "icons/128.png",
    "64": "icons/64.png",
    "32": "icons/32.png",
    "16": "icons/16.png"
  }
}
